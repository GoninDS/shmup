version 42
__lua__
-- main

function _init()
	ship_x=64
	ship_y=64
	speed=0
end

function _update()
	speed=0
	if btn(0) then
			speed=-2
	end
	
	if btn(1) then
		speed=2
	end
	
	ship_x+=speed
	
	if ship_x>120 then
		ship_x=120
	end
	
	if ship_x<0 then
		ship_x=0
	end
end

function _draw()
	cls(0)
	spr(1,ship_x,ship_y)
end


