pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
-- main

function _init()
	ship_x=64
	ship_y=64
	x_speed=0
	y_speed=0
	bullet_x=-25
	bullet_y=0
	plasma_x=-25
	plasma_y=0
end

function _update()
	ship_movement()
	shoot()
end

function _draw()
	cls(1)
	spr(3,bullet_x,bullet_y)
	spr(2,plasma_x,plasma_y)
	spr(1,ship_x,ship_y)
end

function ship_movement()
	x_speed=0
	if btn(0) then
			x_speed=-2
	end
	
	if btn(1) then
		x_speed=2
	end
	
	ship_x+=x_speed
	
	y_speed=0
	if btn(2) then
		y_speed=-2
	end
	
	if btn(3) then
		y_speed=2
	end
	
	ship_y+=y_speed
	
	if ship_x>125 then
		ship_x=0
	end
	
	if ship_x<-5 then
		ship_x=125
	end
	
	if ship_y>120 then
		ship_y=120
	end
	
	if ship_y<0 then
		ship_y=0
	end
end

function shoot()
	bullet_y+=-4
	plasma_y+=-2.5
	if btnp(5) then
		bullet_x=ship_x
		bullet_y=ship_y-4
		sfx(0)
	end
	if btnp(4) then
		plasma_x=ship_x
		plasma_y=ship_y-4
		sfx(1)
	end
end
